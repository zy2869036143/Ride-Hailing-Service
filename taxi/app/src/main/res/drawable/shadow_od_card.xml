            <gradient
                android:angle="45"
                android:endColor="#94beda"
                android:centerColor="#a5dfff"
                android:startColor="#b6f1f6" />
            <corners android:radius="10dp" />

            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
